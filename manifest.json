{
    "manifest_version": 2,
    "name": "Christian Reference Scraper",
    "description": "Scrap articles and blog from reformed Christian websites",
    "version":"1.0.0",
    "icon": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "browser_action" : {
        "default_icon": "icon_20.png",
        "deafault_popup": "main.html"
    },
    "permissions": ["activeTab"]
}